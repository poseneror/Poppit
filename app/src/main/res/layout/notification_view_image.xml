<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="15dp">
    <include layout="@layout/notification_view" />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/not_first_option"
        android:src="@drawable/bubble"
        android:layout_below="@+id/not_header"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        style="@style/BorderImage"
        android:scaleType="centerCrop"/>
    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="OR"
        style="@style/Question"
        android:id="@+id/not_image_divider"
        android:layout_alignTop="@+id/not_first_option"
        android:layout_toLeftOf="@+id/not_first_option"
        android:layout_toRightOf="@+id/not_second_option"
        android:layout_alignBottom="@+id/not_first_option"
        android:gravity="center"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/not_second_option"
        android:src="@drawable/bubble"
        android:layout_alignTop="@+id/not_first_option"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="@style/BorderImage"
        android:scaleType="centerCrop"/>
    </RelativeLayout>
