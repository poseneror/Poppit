<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="#ffffff">
    <posener.poppit.views.RoundProfilePictureView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/my_profile_picture"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/my_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username_filler"
        style="@style/UserName"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/my_profile_picture"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Recent Activity:"
        android:id="@+id/recent_activity_title"
        style="@style/TitleText"
        android:layout_below="@+id/my_profile_picture"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        style="@style/PlainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Joined poppit: xx/xx/xx"
        android:id="@+id/my_join_date"
        android:layout_below="@+id/my_user_name"
        android:layout_alignLeft="@+id/my_user_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone"/>
</RelativeLayout>