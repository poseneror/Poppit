<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentBottom="true"
    tools:context="posener.quicker.QuestionDisplay"
    android:background="#ffffff"
    >

    <com.facebook.login.widget.ProfilePictureView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/user_profile_picture"
        android:layout_marginRight="5dp">

    </com.facebook.login.widget.ProfilePictureView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Publisher"
        android:id="@+id/user_name"
        android:layout_toRightOf="@+id/user_profile_picture"
        style="@style/UserName"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="question content"
        android:id="@+id/question_text"
        android:layout_alignBottom="@+id/user_profile_picture"
        style="@style/Question"
        android:layout_below="@+id/user_name"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/textView"
        android:layout_toStartOf="@+id/yes_no" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YES"
        android:id="@+id/yes_no"
        style="@style/HeaderText"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/question_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="said"
        style="@style/PlainText"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/user_name"
        android:layout_toEndOf="@+id/user_name"
        android:gravity="center_vertical"
        android:layout_alignBottom="@+id/user_name"
        android:layout_marginLeft="5dp"
        android:id="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="to"
        style="@style/PlainText"
        android:layout_alignBottom="@+id/user_profile_picture"
        android:layout_toRightOf="@+id/user_profile_picture"
        android:layout_toEndOf="@+id/user_profile_picture"
        android:layout_below="@+id/user_name"
        android:gravity="center_vertical"
        android:layout_marginRight="5dp"
        android:id="@+id/textView" />
</RelativeLayout>
